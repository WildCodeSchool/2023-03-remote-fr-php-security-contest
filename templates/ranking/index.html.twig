{% extends 'base.html.twig' %}

{% block title %}Ranking{% endblock %}

{% block body %}
    <ul class="list-group">
        {% for user in users %}
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <span>{{ loop.index }}</span>
                <span class="{{ loop.index < 4 ? 'rank-'~loop.index }}">{{ user.username }}</span>
                <span class="badge badge-secondary badge-pill">Drapeaux captur√©s : {{ user.stepInProgress - 1 }}</span>
            </li>
        {% endfor %}
    </ul>
{% endblock %}
